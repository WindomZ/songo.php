{
    "name": "windomz/songo",
    "description": "Implement the Php library for the Songo protocol.",
    "homepage": "https://github.com/WindomZ/songo.php",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "WindomZ",
            "email": "git.windomz@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/WindomZ/songo.php/issues"
    },
    "autoload": {
        "psr-4": {"Songo\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"Songo\\": "tests/"}
    },
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.1",
        "jakub-onderka/php-parallel-lint": "^0.9.2"
    },
    "scripts": {
        "test": [
            "parallel-lint . --exclude vendor",
            "phpunit ./tests"
        ]
    }
}
